{% from 'components/menu_item.jinja' import menu_item %}

{% macro slushpool_menu(active_menuitem) -%}
	<nav class="row collapse-on-mobile">
		{{ menu_item(service.id, 'payouts', 'Payouts', active_menuitem, isLeft=true) }}
		{{ menu_item(service.id, 'upload', 'Upload CSV', active_menuitem) }}
		{{ menu_item(service.id, 'settings', 'Settings', active_menuitem, isRight=true) }}
		<a href="javascript:void(0);" class="mobile-nav-icon" onclick="toggleMobileNav(this, `{{ url_for('static', filename='img/caret-down.svg') }}`, `{{ url_for('static', filename='img/caret-up.svg') }}`)">
			<img style="width: 36px;" src="{{ url_for('static', filename='img/caret-down.svg') }}"/>
		</a>
	</nav>
{%- endmacro %}